<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MyTextViewGrey</item>
        <item name="android:editTextStyle">@style/MyEditTextGrey</item>
        <item name="android:windowBackground">@color/gray</item>
    </style>

    <style name="NavTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:thumbTextPadding">0dp</item>
    </style>

    <style name="MyTextViewGrey" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>

    </style>
    <style name="MyEditTextGrey" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/button_outline</item>
    </style>

</resources>
