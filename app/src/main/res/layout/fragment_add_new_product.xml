<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".fragments.AddNewProductFragment">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/newP_stepCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Step 1 of 4"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/newP_stepProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:max="100"
            android:progress="25" />

        <TextView
            android:id="@+id/newP_stepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="DELIVERY INFO"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newP_step1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_outline"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Department"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/newP_spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Category"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/newP_spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select SubCategory"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/newP_spinner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/newP_step2Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="40dp"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product photo 1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/newProduct_thumb_imageView"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_outline"
                android:scaleType="center"
                android:src="@drawable/ic_add_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_black_24dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Product photo 1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/newProduct_imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_outline"
                android:scaleType="center"
                android:src="@drawable/ic_add_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_black_24dp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Product photo 1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/newProduct_imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_outline"
                android:scaleType="center"
                android:src="@drawable/ic_add_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_black_24dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Product photo 1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/newProduct_imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_outline"
                android:scaleType="center"
                android:src="@drawable/ic_add_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_black_24dp" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/newP_step3Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="0dp"
                android:text="Product Name*(मराठीत)"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newP_nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter name of product"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/newProduct_mrp_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:text="MRP(ईंग्रजी अंकात)"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView

                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_outline"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="₹." />

                <EditText
                    android:id="@+id/newP_priceField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_outline"
                    android:ems="10"
                    android:hint="Enter amount eg. 110"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/newProduct_offer_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:text="Offer Price*(ईंग्रजी अंकात)"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_outline"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="₹." />

                <EditText
                    android:id="@+id/newP_offerPriceField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_outline"
                    android:ems="10"
                    android:hint="Enter amount eg. 100"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/newProduct_quantity_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:text="Available Quantity"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/newP_quantityField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter number"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:text="Description* (मराठीत)"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newP_descriptionField"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:gravity="start"
                android:hint="Enter short description of product"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/newProduct_setpricebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_outline"
                android:drawableLeft="@drawable/ic_add_black_24dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:text="Set Price Details"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/addnewP_pricesError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price details are not set !"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Details"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_oneField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter name of product"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_twoField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter name of product"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_threeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter name of product"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_fourField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter name of product"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_fiveField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter name of product"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_sixField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter name of product"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/newP_previousButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"

            android:layout_weight="1"
            android:background="@drawable/button_outline_rect"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="Previous"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/newP_nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="16dp"

            android:layout_weight="1"
            android:background="@drawable/button"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="Next"
            android:textColor="#ffffff" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/newP_step4Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/newP_deliveryTimeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter delivery time eg. 1 hr / 24 hr"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_returnPolicyField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter policy for returns eg. within 3 days"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_deliveryChargesField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter delivery charges eg. 0 for free/ 10 per order"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newP_minOrderField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_outline"
                android:ems="10"
                android:hint="Enter minimum order eg. 1 , 5 , 10"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/newP_codSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:text="COD available"
                android:textColor="@android:color/darker_gray" />

            <Switch
                android:id="@+id/newP_returnSwitch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:text="Return available"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/newP_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>