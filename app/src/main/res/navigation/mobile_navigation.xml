<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.nexm.goseller.ui.home.OrderFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_order" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.nexm.goseller.ui.dashboard.ProductsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_products" >
        <argument
            android:name="sellerID"
            app:argType="string"
            android:defaultValue="x" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.nexm.goseller.ui.notifications.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/profile_fragment" />
</navigation>